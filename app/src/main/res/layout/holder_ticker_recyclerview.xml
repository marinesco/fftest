<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fab_margin_half">

    <TextView
        android:id="@+id/holder_ticker_c_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_H2"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/holder_ticker_ltr_name_tv"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/holder_ticker_pcp_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/holder_ticker_pcp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_holder_ticker_textview"
        android:padding="@dimen/ticker_holder_textview_padding"
        android:textSize="@dimen/font_size_H2"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/holder_ticker_c_tv"
        app:layout_constraintLeft_toRightOf="@id/holder_ticker_c_tv"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/holder_ticker_ltr_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin_half"
        android:gravity="left"
        android:textSize="@dimen/font_size_p"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/holder_ticker_ltp_cng_tv"
        app:layout_constraintTop_toBottomOf="@id/holder_ticker_c_tv" />

    <TextView
        android:id="@+id/holder_ticker_ltp_cng_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="@dimen/font_size_p"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/holder_ticker_ltr_name_tv"
        app:layout_constraintLeft_toRightOf="@id/holder_ticker_ltr_name_tv"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>